{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "MoviesInput",
						"type": "DatasetReference"
					},
					"name": "moviesinput"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "MoviesOutput",
						"type": "DatasetReference"
					},
					"name": "MoviesOutput"
				}
			],
			"transformations": [
				{
					"name": "YearExtraction"
				}
			],
			"scriptLines": [
				"source(output(",
				"          movieId as string,",
				"          title as string,",
				"          genres as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> moviesinput",
				"moviesinput derive(Year = toInteger(trim(right(title,6),'()')),",
				"          title = toString(left(title,length(title)-6))) ~> YearExtraction",
				"YearExtraction sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['MoviesFinal.csv'],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> MoviesOutput"
			]
		}
	}
}